<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:padding="16dp"
    >

        <!-- Username EditText -->
    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="-100dp"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/logo" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:verticalScrollbarPosition="right">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:orientation="vertical">


            <EditText
                android:id="@+id/Username2"
                android:layout_width="300dp"
                android:layout_gravity="center"
                android:layout_height="60dp"
                android:layout_marginTop="50dp"
                android:gravity="right"
                android:hint="שם מלא"
                android:inputType="text"
                android:layoutDirection="rtl" />
            <TextView
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="0dp"
                android:gravity="right"
                android:layoutDirection="rtl"
                android:text="*שדה חובה"
                android:textColor="#BFE91E1E"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/nickname"
                android:layout_width="300dp"
                android:layout_gravity="center"                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:gravity="right"
                android:hint="כינוי (שם משתמש)"
                android:layoutDirection="rtl" />



            <TextView
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="0dp"
                android:gravity="right"
                android:layoutDirection="rtl"
                android:text="*שדה זה הינו שדה רשות, ללא כינוי שם המשמתמש יהיה השם המלא"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/Password2"
                android:layout_width="300dp"
                android:layout_gravity="center"
                android:layout_height="60dp"
                android:layout_marginTop="0dp"
                android:gravity="right"
                android:hint="סיסמה"
                android:inputType="textPassword"
                android:layoutDirection="rtl" />

            <TextView
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="0dp"
                android:gravity="right"
                android:layoutDirection="rtl"
                android:text="*שדה חובה"
                android:textColor="#BFE91E1E"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/school"
                android:layout_width="300dp"
                android:layout_gravity="center"                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:gravity="right"
                android:hint="אשכול (תיכון)"
                android:layoutDirection="rtl" />

            <TextView
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="0dp"
                android:gravity="right"
                android:layoutDirection="rtl"
                android:text="*שדה חובה"
                android:textColor="#BFE91E1E"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/city"
                android:layout_width="300dp"
                android:layout_gravity="center"                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:gravity="right"
                android:hint="עיר מגורים"
                android:layoutDirection="rtl" />

            <TextView
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="0dp"
                android:gravity="right"
                android:layoutDirection="rtl"
                android:text="*שדה חובה"
                android:textColor="#BFE91E1E"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/phone"
                android:layout_width="300dp"
                android:layout_gravity="center"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:gravity="right"
                android:hint="מס' טלפון"
                android:inputType="number"
                android:layoutDirection="rtl" />

            <TextView
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="0dp"
                android:gravity="right"
                android:layoutDirection="rtl"
                android:text="*שדה חובה"
                android:textColor="#BFE91E1E"
                android:textSize="12sp" />

            <RadioGroup
                android:id="@+id/radioGroup"
                android:layout_width="300dp"
                android:layout_gravity="center"
                android:layout_height="match_parent">

                <RadioButton
                    android:id="@+id/radioButton0"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layoutDirection="rtl"
                    android:text="י" />

                <RadioButton
                    android:id="@+id/radioButton1"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="-47dp"
                    android:layoutDirection="rtl"
                    android:text="יא" />

                <RadioButton
                    android:id="@+id/radioButton2"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginTop="-47dp"
                    android:layoutDirection="rtl"
                    android:text="יב" />

            </RadioGroup>

            <TextView
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="15dp"
                android:gravity="right"
                android:layoutDirection="rtl"
                android:text="*שדה חובה"
                android:textColor="#BFE91E1E"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/editTextText"
                android:layout_width="300dp"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:ems="10"
                android:gravity="center_horizontal"
                android:layoutDirection="rtl"
                android:text="יום הולדת" />

            <EditText
                android:id="@+id/year"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal"
                android:hint="שנה"
                android:inputType="number"
                android:layoutDirection="rtl" />

            <EditText
                android:id="@+id/month"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"

                android:layout_marginTop="-47dp"
                android:gravity="center_horizontal"
                android:hint="חודש"
                android:inputType="number"
                android:layoutDirection="rtl" />

            <EditText
                android:id="@+id/day"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:inputType="number"
                android:layout_marginTop="-47dp"
                android:gravity="center"
                android:hint="יום"
                android:layoutDirection="rtl" />

            <TextView
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="0dp"
                android:gravity="center"
                android:layoutDirection="rtl"
                android:text="*3 שדות חובה"
                android:textColor="#BFE91E1E"
                android:textSize="12sp" />

            <CheckBox
                android:id="@+id/checkBox2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layoutDirection="rtl"
                android:text="שמור פרטים" />

            <Button
                android:id="@+id/reg_sign_up"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:layoutDirection="rtl"
                android:text="יצירת משתמש" />

            <Button
                android:id="@+id/retorn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:backgroundTint="#AE00B1"
                android:layoutDirection="rtl"
                android:text="בעצם יש לי כבר משתמש" />


        </LinearLayout>
    </ScrollView>

</RelativeLayout>